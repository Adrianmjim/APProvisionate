<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pad.ucm.approvisionate.ActivityAdd">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="37dp"
        android:layout_marginTop="28dp"
        android:text="Hora de apertura: "
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botonUbicacion"
        android:layout_marginStart="37dp" />

    <TextView
        android:id="@+id/nombreLocal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="37dp"
        android:text="Nombre:"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="37dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/nombreLocaluse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toRightOf="@+id/nombreLocal"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="3dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/botonUbicacion"
        android:layout_width="215dp"
        android:layout_height="48dp"
        android:layout_marginLeft="16dp"
        android:text="Obtener Ubicación "
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="25dp"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toBottomOf="@+id/nombreLocal" />

    <ToggleButton
        android:id="@+id/toggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="vacio"
        tools:text="vacio"
        app:layout_constraintLeft_toRightOf="@+id/botonUbicacion"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/nombreLocaluse" />

    <TextView
        android:id="@+id/horaApertura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="37dp"
        android:layout_marginTop="28dp"
        android:text="Hora de apertura: "
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botonUbicacion"
        android:layout_marginStart="37dp" />

    <Spinner
        android:id="@+id/spinnerApertura"
        android:layout_width="186dp"
        android:layout_height="27dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="18dp"
        app:layout_constraintLeft_toRightOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/toggleButton"
        android:layout_marginStart="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="110dp"
        android:layout_height="19dp"
        android:text="Hora de cierre: "
        android:layout_marginLeft="37dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        android:layout_marginStart="37dp" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="186dp"
        android:layout_height="27dp"
        app:layout_constraintLeft_toRightOf="@+id/textView4"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/spinnerApertura"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonCamara"
        android:layout_marginRight="8dp"
        app:layout_constraintVertical_bias="0.555"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/buttonCamara"
        android:layout_width="308dp"
        android:layout_height="40dp"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="20dp"
        android:text="Fotografía del lugar"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <Button
        android:id="@+id/buttonAñadir"
        android:layout_width="212dp"
        android:layout_height="46dp"
        android:layout_marginLeft="74dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="10dp"
        android:text="Añadir"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonCamara" />
</android.support.constraint.ConstraintLayout>
